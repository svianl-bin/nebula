{
    "name": "nebula",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --host --open",
        "build": "vue-tsc -b && vite build --mode production",
        "build:staging": "vite build --mode staging",
        "build:testing": "vite build --mode testing",
        "preview": "vite preview --mode production",
        "preview:staging": "vite preview --mode staging",
        "preview:testing": "vite preview --mode testing",
        "lint": "eslint . --cache --cache-location node_modules/.cache/eslint/",
        "lint:fix": "eslint . --fix --cache --cache-location node_modules/.cache/eslint/",
        "lint:prettier": "prettier . --write --cache --cache-location node_modules/.cache/prettier/",
        "lint:prettier:check": "prettier . --check",
        "lint:stylelint": "stylelint \"**/*.{css,scss,vue,html}\" --fix --cache --cache-location node_modules/.cache/stylelint/",
        "lint:lint-staged": "lint-staged",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,ts,mjs,mts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{cjs,json,jsonc,yaml,yml,md}": [
            "prettier --write"
        ],
        "*.{html,css,scss}": [
            "stylelint --fix --allow-empty-input",
            "prettier --write"
        ],
        "*.vue": [
            "eslint --fix",
            "stylelint --fix --allow-empty-input",
            "prettier --write"
        ]
    },
    "dependencies": {
        "vue": "^3.5.17"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.36.0",
        "@types/node": "^24.5.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@vitejs/plugin-vue": "^6.0.0",
        "@vue/tsconfig": "^0.7.0",
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.1.1",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-vue": "^10.4.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "postcss-html": "^1.8.0",
        "postcss-scss": "^4.0.9",
        "prettier": "3.6.2",
        "sass-embedded": "^1.93.0",
        "stylelint": "^16.24.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recess-order": "^7.3.0",
        "stylelint-config-recommended-scss": "^16.0.1",
        "stylelint-config-recommended-vue": "^1.6.1",
        "stylelint-config-standard": "^39.0.0",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-scss": "^6.12.1",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.44.0",
        "vite": "^7.0.4",
        "vite-plugin-vue-devtools": "^8.0.2",
        "vue-tsc": "^2.2.12"
    }
}
